<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">



    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:layout_marginBottom="20dp"
        android:text="반복" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp">

        <CheckBox
            android:id="@+id/weekdaysBtn_AlarmDialog"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:button="@null"
            android:gravity="center"
            android:background="@drawable/btn_selector"
            android:textColor="@drawable/btn_textcolor_selector"
            android:textSize="30dp"
            android:text="주중"
            android:layout_marginEnd="60dp"/>



        <CheckBox
            android:id="@+id/weekendBtn_AlarmDialog"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_selector"
            android:textColor="@drawable/btn_textcolor_selector"
            android:button="@null"
            android:textSize="30dp"
            android:gravity="center"
            android:text="주말" />
    </LinearLayout>

    <CheckBox
        android:id="@+id/mondayCheckBox_AlarmDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="50dp"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorGray"
        android:text="월요일" />

    <CheckBox
        android:id="@+id/tuesdayCheckBox_AlarmDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="50dp"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorGray"
        android:text="화요일" />

    <CheckBox
        android:id="@+id/wednesdayCheckBox_AlarmDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="50dp"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorGray"
        android:text="수요일" />

    <CheckBox
        android:id="@+id/thursdayCheckBox_AlarmDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="50dp"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorGray"
        android:text="목요일" />
    <CheckBox
        android:id="@+id/fridayCheckBox_AlarmDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="50dp"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorGray"
        android:text="금요일" />
    <CheckBox
        android:id="@+id/saturdayCheckBox_AlarmDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="50dp"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorGray"
        android:text="토요일" />

    <CheckBox
        android:id="@+id/sundayCheckBox_AlarmDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="50dp"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorGray"
        android:text="일요일" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginTop="40dp">

        <Button
            android:id="@+id/cancelBtn_AlarmDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorTransparent"
            android:drawableLeft="@drawable/ic_delete"
            android:layout_marginEnd="20dp"
            android:text="취소" />

        <Button
            android:id="@+id/enterBtn_AlarmDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_ok"
            android:background="@color/colorTransparent"
            android:text="확인" />

    </LinearLayout>
</LinearLayout>