<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_alarm"
    android:layout_margin="10dp">

    <CheckBox
        android:id="@+id/checkBox_itemAlarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/nameTextView_itemAlarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="주중 팀노바 학원가는 날"
        android:textSize="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/checkBox_itemAlarm"/>

    <TextView
        android:id="@+id/timeTextView_itemAlarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12:30"
        android:textSize="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/nameTextView_itemAlarm"
        app:layout_constraintLeft_toRightOf="@id/checkBox_itemAlarm"/>



    <TextView
        android:id="@+id/amPmTextView_itemAlarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="오후"
        android:textSize="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toRightOf="@id/timeTextView_itemAlarm"
        app:layout_constraintTop_toBottomOf="@id/nameTextView_itemAlarm"/>

    <TextView
        android:id="@+id/weekTextView_itemAlarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="주중"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@id/timeTextView_itemAlarm"
        app:layout_constraintLeft_toRightOf="@id/checkBox_itemAlarm"/>

    <ImageView
        android:id="@+id/clockImage_itemAlarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_clock"
        android:layout_marginEnd="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/nudgeImage_itemAlarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_arrow_left"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>